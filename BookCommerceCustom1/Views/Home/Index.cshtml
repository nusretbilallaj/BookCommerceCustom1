@model IEnumerable<Produkti>


<div class="row pb-3">
    @foreach(var produkti in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <img src="@produkti.ImageUrl" class="card-img-top rounded"/>

                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@produkti.Emri</p>
                                <p class="card-title text-info">prej <b>@produkti.Autori</b></p>
                            </div>
                            <div class="pl-1">
                                <p>Cmimi bazë: <strike><b>$@produkti.CmimiBaze.ToString("0.00")</b></strike></p>
                            </div>
                            <div class="pl-1">
                                <p>As low as: <b>$@produkti.Cmimi100.ToString("0.00")</b></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Detajet" class="btn btn-primary form-control" asp-route-produktiId="@produkti.Id">
                            Detajet
                        </a>
                    </div>
                </div> 
            </div>
        </div>
    }
</div>