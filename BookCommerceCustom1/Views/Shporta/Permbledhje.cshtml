@model BookCommerceCustom1.ViewModels.ShportaViewModel
@using Microsoft.Extensions.Options
@using BookCommerceCustom1.Helpers
@inject IOptions<StripeSettings> Stripe
<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class=" row container">
					<div class="col-6">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						Permbledhja e porosise
					</div>
					<div class="col-6 text-end">
						<a asp-action="Listo" class="btn btn-outline-info btn-sm">Kthehu te shporta</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-info">Detajet e dergeses:</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Emri</label>
								</div>
								<div class="col-9">
									<input asp-for="Porosia.Emri" class="form-control" />
									<span asp-validation-for="Porosia.Emri" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Telefoni</label>
								</div>
								<div class="col-9">
									<input asp-for="Porosia.NumriITelefonit" class="form-control" />
									<span asp-validation-for="Porosia.NumriITelefonit" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Rruga</label>
								</div>
								<div class="col-9">
									<input asp-for="Porosia.Rruga" class="form-control" />
									<span asp-validation-for="Porosia.Rruga" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Qyteti</label>
								</div>
								<div class="col-9">
									<input asp-for="Porosia.Qyteti" class="form-control" />
									<span asp-validation-for="Porosia.Qyteti" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Shteti</label>
								</div>
								<div class="col-9">
									<input asp-for="Porosia.Shteti" class="form-control" />
									<span asp-validation-for="Porosia.Shteti" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Kodi postal</label>
								</div>
								<div class="col-9">
									<input asp-for="Porosia.KodiPostal" class="form-control" />
									<span asp-validation-for="Porosia.KodiPostal" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-info">Permbledhja e porosise:</span>
							</h4>
							<ul class="list-group mb-3">
								@foreach (var det in Model.Shportat)
								{
									<li class="list-group-item d-flex justify-content-between">
										<div>
											<h6 class="my-0">@det.Produkti.Emri</h6>
											<small class="text-muted"> Sasia: @det.Sasia</small>
										</div>
										<span class="text-muted">@((det.Sasia * det.Cmimi).ToString("c")) </span>
									</li>
								}


								<li class="list-group-item d-flex justify-content-between bg-light">
									<small class="text-info">Total (EUR)</small>
									<strong class="text-info">@Model.Porosia.Totali.ToString("c")</strong>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					<div class="col-12 col-md-8 pt-2">
						<p style="color:maroon; font-size:14px;">Estimate Arrival Date: </p>
					</div>
					<div class="col-12 col-md-4">
						<button type="submit" value="Place Order" class="btn btn-primary form-control">Porosit</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
